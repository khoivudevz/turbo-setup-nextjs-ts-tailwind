{
	"name": "turbo-setup-nextjs-ts-tailwind",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "env-cmd -f .env.dev next dev --turbopack --port 9090 --hostname 0.0.0.0",
		"dev:prod": "env-cmd -f .env.prod next dev --turbopack --port 9090 --hostname 0.0.0.0",
		"dev:staging": "env-cmd -f .env.staging next dev --turbopack --port 9090 --hostname 0.0.0.0",
		"build": "env-cmd -f .env.prod next build",
		"build:staging": "env-cmd -f .env.staging next build",
		"build:dev": "env-cmd -f .env.dev next build",
		"start": "env-cmd -f .env.prod next start --port 9090",
		"start:staging": "env-cmd -f .env.staging next start --port 9090",
		"start:dev": "env-cmd -f .env.dev next start --port 9090",
		"lint": "next lint",
		"prepare": "husky",
		"prebuild": "rimraf .next"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.0.17",
		"@types/js-cookie": "^3.0.6",
		"axios": "^1.8.4",
		"clsx": "^2.1.1",
		"dayjs": "^1.11.13",
		"env-cmd": "^10.1.0",
		"js-cookie": "^3.0.5",
		"lodash": "^4.17.21",
		"next": "^15.2.4",
		"next-intl": "^4.0.2",
		"nuqs": "^2.4.1",
		"prettier": "^3.5.3",
		"rc-dialog": "^10.0.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"rimraf": "^6.0.1",
		"sanitize-html": "^2.15.0",
		"sharp": "^0.33.5",
		"styled-components": "^6.1.18",
		"tailwind-merge": "^3.0.2",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@eslint/eslintrc": "^3.3.1",
		"@types/lodash": "^4.17.16",
		"@types/node": "^22.13.14",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"@types/sanitize-html": "^2.13.0",
		"eslint": "^9.23.0",
		"eslint-config-next": "^15.2.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.0.17",
		"typescript": "^5.8.2"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"bun prettier --write"
		]
	}
}
